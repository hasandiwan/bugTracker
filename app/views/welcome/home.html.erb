<div class="homepage">  
  <div class="welcome-container">
    <div>
      <div id="bug-main-icon" style="font-size: 1rem; color: DarkGreen">
        <i class="fas fa-bug fa-10x"></i>
      </div>
      <h1 class="display-5">Welcome to Bug Tracker</h1>
      <h6><em>An elegant way to keep track of your IT projects' issues and bugs!</em></h6>
    </div>
  </div>

  <%if !current_user%>

    <% if flash[:alert] %>
      <div>
        <p align="center" class="flash-error"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div class="form-container">
    
      <p align="center" class="lead">Please enter your <em>log in</em> details</p>
      

      <%= form_tag({controller: 'sessions', action: 'create', method: 'post'}) do %>

        <div class="mb-3">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= email_field_tag :email, nil, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= label_tag :password, "Password", class: "form-label" %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>

        <div>
          <%= submit_tag "Sign In", class:"btn btn-success" %>
        </div>
      
      <% end %> 
    </div>

    <small class="add-edit-record">Sign up as a <%=link_to "demonstration", guest_login_path%>
    <p>You can use the details of the demo account on future logins</p>
    </small>
  <% end %> 
</div>